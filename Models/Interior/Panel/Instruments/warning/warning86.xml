<PropertyList>
  
  <path>warning86.ac</path>
  
  <animation>
    <object-name>cover</object-name>    
    <object-name>text</object-name>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>cover</object-name>    
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>
  
  <!--Indicators 86 Parking Brake-->
  <animation>
    <type>material</type>
    <object-name>text</object-name>
    <condition>
      <greater-than>
        <property>controls/gear/brake-parking</property>
        <value>0</value>
      </greater-than>
    </condition>  
    <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>    
    </emission>
  </animation>
  
</PropertyList>
