<PropertyList>
  
  <path>warning34.ac</path>
  
  <animation>
    <object-name>cover</object-name>    
    <object-name>text</object-name>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>cover</object-name>    
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>
  
  <!--Indicator 34-decision height (H) -->
  <animation>
    <type>material</type>
    <object-name>text</object-name>
    <condition>
      <less-than>
        <property>position/altitude-agl-ft</property>
        <property>instrumentation/altimeter/decision-height</property>      
      </less-than>
    </condition> 
    <emission>
      <red>   2 </red>
      <green> 2 </green>
      <blue>  2 </blue>    
    </emission>
  </animation>
  
  <animation>
    <type>pick</type>
    <object-name>text</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>instrumentation/altimeter/decision-height</property>
        <value> 0 </value>
      </binding>
    </action>
  </animation>
  
</PropertyList>
