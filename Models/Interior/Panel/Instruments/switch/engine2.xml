<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>switch.ac</path>
  
  <animation>
    <object-name>fond</object-name>
    <object-name>switch</object-name>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>fond</object-name>
    <object-name>switch</object-name>
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>pick</type>
    <object-name>switch</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>/controls/engines/engine[2]/condition</property>
      </binding>      
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>switch</object-name>
    <property>/controls/engines/engine[2]/condition</property>
    <factor> -50 </factor>
    <axis>
      <x>  0 </x>
      <y>  1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
</PropertyList>
